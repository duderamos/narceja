= form_for @forwarder, :html => { class: 'form', role: 'form' } do |f|
  - if @forwarder.errors.any?
    - @forwarder.errors.full_messages.each do |msg|
      %p.alert.alert-warning
        = msg

  .form-group
    = f.label :responsible, class: 'control-label'
    = f.text_field :responsible, class: 'form-control'
  .form-group
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label 'Domain', class: 'control-label'
    = f.collection_select :domain_id, Domain.all, :id, :name, {}, { class: 'form-control' }
  .form-group
    = f.label :goto, class: 'control-label'
    = f.text_area :goto, class: 'form-control'

  .form-group
    = f.submit 'Save', class: 'btn btn-default'
    = link_to 'Cancel', :back, { class: 'btn btn-default' }
